<project name="VillageChief DataHub" xmlns:sf="salesforce">
  <property file="sonar.properties"/>
  <!-- Define the Sonar task -->
  <taskdef uri="antlib:org.sonar.ant" resource="org/sonar/ant/antlib.xml">
    <classpath path="sonar-ant-task-2.2.jar" />
  </taskdef>
  <!-- Add the target -->
  <target name="proxy">
        <property name="sfdc.proxy.host" value="${sfdc.proxy.host}"/>
        <property name="sfdc.proxy.port" value="${sfdc.proxy.port}"/>
        <setproxy proxyhost="53.90.36.56" proxyport="3128" /> 
     </target>
  <target name="sonar" depends="proxy">
    
    <!-- to be set by Jenkins or manually -->
	<!--
	sonar.host.url
	sonar.login
	sonar.password
	sonar.jdbc.url
	sonar.jdbc.username
	sonar.jdbc.password
	salesforce.username
	salesforce.password
	sonar.projectVersion
	-->
    <!-- location properties -->
	<property name="sonar.sourceEncoding" value="UTF-8"/>
    <property name="sonar.sources" value="src/main/metadata" />
    <!-- define if not already defined properties -->
    <property name="sonar.language" value="sf" />
    <property name="salesforce.url" value="https://www.salesforce.com" />
   	<property name="sonar.projectKey" value="${sonar.projectKey}" />
	<property name="sonar.projectName" value="${sonar.projectName}" />
	<!-- New Props added on 15Jul2018 -->
	<property name="sonar.projectVersion" value="1.0" />
	<!-- <property name="sonar.java.binaries" value="build" />
	<property name="sonar.java.libraries" value="lib/*.jar" />-->
	<property name="sonar.host.url" value="http://53.23.179.30:9001" />
       <sonar:sonar xmlns:sonar="antlib:org.sonar.ant"/>
  </target>
</project>

