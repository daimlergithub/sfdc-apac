<project name="VillageChief DataHub" xmlns:sf="salesforce">
    
  <!-- Define the Sonar task -->
  <taskdef uri="antlib:org.sonar.ant" resource="org/sonar/ant/antlib.xml">
    <classpath path="sonar-ant-task-2.2.jar" />
  </taskdef>
  
  <!-- Add the target -->
  <target name="sonar">
    <!-- to be set by Jenkins or manually -->
	<!--
	sonar.host.url
	sonar.login
	sonar.password
	sonar.jdbc.url
	sonar.jdbc.username
	sonar.jdbc.password
	salesforce.username
	salesforce.password
	sonar.projectVersion
	sonar.projectKey
	sonar.projectName
	salesforce.url
	scm
	-->
	
    <!-- location properties -->
	<property name="sonar.sourceEncoding" value="UTF-8"/>
    <property name="sonar.sources" value="src/main/metadata" />
    
    <!-- define if not already defined properties -->
    <property name="sonar.language" value="sf" />
    <property name="salesforce.url" value="https://www.salesforce.com" />
   
	<property name="sonar.projectKey" value="${sonar.projectKey}" />
	<property name="sonar.projectName" value="${sonar.projectName}" />
   
    <sonar:sonar xmlns:sonar="antlib:org.sonar.ant"/>
  </target>

</project>

