<project name="Sample usage of Salesforce Ant tasks" basedir="." xmlns:sf="antlib:com.salesforce">

    <property file="build.properties"/>
	<property environment="env"/>
	
	<target name="backup">
      <mkdir dir="src/backup/metadata"/>
      <!-- Retrieve the contents into another directory -->
      <sf:retrieve username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" maxPoll="${sf.maxPoll}" retrieveTarget="src/backup/metadata" unpackaged="src/backup/metadata.xml"/>
    </target>
	
	<target name="restore">
      <!-- Retrieve the contents into another directory -->
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="src/backup/metadata"/>
    </target>
	
	<!-- Shows removing code; only succeeds if done after deployCode -->
    <target name="cleanup">
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="src/cleanup"/>
    </target>
	
    <!-- Retrieve an unpackaged set of metadata from your org -->
    <!-- The file unpackaged/package.xml lists what is to be retrieved -->
    <target name="retrieveUnpackaged">
      <mkdir dir="src/incoming/metadata"/>
      <!-- Retrieve the contents into another directory -->
      <sf:retrieve username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" maxPoll="${sf.maxPoll}" retrieveTarget="src/incoming/metadata" unpackaged="src/incoming/metadata.xml"/>
    </target>

    <!-- Retrieve all the items of a particular metadata type -->
    <target name="bulkRetrieve">
      <sf:bulkRetrieve username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" maxPoll="${sf.maxPoll}" metadataType="${sf.metadataType}" retrieveTarget="retrieveUnpackaged"/>
    </target>

    <!-- Retrieve metadata for all the packages specified under packageNames -->
    <target name="retrievePkg">
      <sf:retrieve username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" maxPoll="${sf.maxPoll}" retrieveTarget="retrieveOutput" packageNames="${sf.pkgName}"/>
    </target>

    <!-- Deploy the unpackaged set of metadata retrieved with retrieveUnpackaged -->
    <target name="deployUnpackaged">
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="src/main/metadata"/>
    </target>

    <!-- Deploy a zip of metadata files to the org -->
    <target name="deployZip">
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" zipFile="${sf.zipFile}" pollWaitMillis="1000"/>
    </target>

    <!-- Shows deploying code & running tests for code in directory -->
    <target name="deployCode">
      <!-- Upload the contents of the "src/main/metadata" directory, running the tests for just 1 class -->
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="src/main/apex"/>
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="src/test/apex"/>
    </target>

    <!-- Shows removing code; only succeeds if done after deployCode -->
    <target name="undeployCode">
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="removecodepkg"/>
    </target>

    <!-- Shows retrieving code; only succeeds if done after deployCode -->
    <target name="retrieveCode">
      <mkdir dir="src/main/apex/classes"/>
      <mkdir dir="src/test/apex/classes"/>
      <!-- Retrieve the contents listed in the file codepkg/package.xml into the codepkg directory -->
      <sf:retrieve username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" maxPoll="${sf.maxPoll}" retrieveTarget="src/main/apex" unpackaged="src.xml"/>
      <move todir="src/test/apex/classes">
        <fileset dir="src/main/apex/classes">
          <include name="**/*Test.*" />
        </fileset>
      </move>
    </target>

    <!-- Shows deploying code, running all tests, and running tests (1 of which fails), and logging. -->
    <target name="deployCodeFailingTest">
      <!-- Upload the contents of the "codepkg" package, running all tests -->
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="codepkg" runAllTests="true" logType="Debugonly"/>
    </target>

    <!-- Shows check only; never actually saves to the server -->
    <target name="deployCodeCheckOnly">
      <sf:deploy username="${sf_target.username}" password="${sf_target.password}" serverurl="${sf_target.serverurl}" maxPoll="${sf.maxPoll}" deployRoot="codepkg" checkOnly="true"/>
    </target>

	<!-- Retrieve the information of all items of a particular metadata type -->
    <target name="listMetadata">
      <sf:listMetadata username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}" metadataType="${sf.metadataType}"/>
    </target>

	<!-- Retrieve the information on all supported metadata type -->
    <target name="describeMetadata">
      <sf:describeMetadata username="${sf_src.username}" password="${sf_src.password}" serverurl="${sf_src.serverurl}"/>
    </target>
</project>
