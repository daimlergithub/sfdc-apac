    <compactLayoutAssignment>SYSTEM</compactLayoutAssignment>
    <deploymentStatus>Deployed</deploymentStatus>
    <description>This object will set a schedule job to send SMS in a batch.</description>
    <enableActivities>true</enableActivities>
    <enableBulkApi>true</enableBulkApi>
    <enableEnhancedLookup>true</enableEnhancedLookup>
    <enableFeeds>false</enableFeeds>
    <enableHistory>true</enableHistory>
    <enableReports>true</enableReports>
    <enableSharing>true</enableSharing>
    <enableStreamingApi>true</enableStreamingApi>
    <externalSharingModel>ControlledByParent</externalSharingModel>
    <fields>
        <fullName>Batch_Size__c</fullName>
        <externalId>false</externalId>
        <inlineHelpText>Please set the size around 10000</inlineHelpText>
        <label>Batch Size</label>
        <precision>5</precision>
        <required>false</required>
        <scale>0</scale>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>Number</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Batch_Start__c</fullName>
        <externalId>false</externalId>
        <label>Batch Start Time</label>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>DateTime</type>
    </fields>
    <fields>
        <fullName>Batch_Status__c</fullName>
        <description>To verify the progress status of one batch job.</description>
        <externalId>false</externalId>
        <label>Batch Status</label>
        <picklist>
            <picklistValues>
                <fullName>New</fullName>
                <default>true</default>
            </picklistValues>
            <picklistValues>
                <fullName>Active</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Suspended</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Finished</fullName>
                <default>false</default>
            </picklistValues>
            <picklistValues>
                <fullName>Expired</fullName>
                <default>false</default>
            </picklistValues>
            <sorted>false</sorted>
        </picklist>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>Picklist</type>
    </fields>
    <fields>
        <fullName>Campaign__c</fullName>
        <externalId>false</externalId>
        <label>Campaign</label>
        <referenceTo>Campaign</referenceTo>
        <relationshipName>OB_SMS</relationshipName>
        <relationshipOrder>0</relationshipOrder>
        <reparentableMasterDetail>false</reparentableMasterDetail>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>MasterDetail</type>
        <writeRequiresMasterRead>false</writeRequiresMasterRead>
    </fields>
    <fields>
        <fullName>ScheduleJobID__c</fullName>
        <description>for background code process,not shown to user</description>
        <externalId>false</externalId>
        <label>Schedule Job ID</label>
        <length>18</length>
        <required>false</required>
        <trackHistory>false</trackHistory>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <label>SMS/MMS Batch</label>
    <nameField>
        <displayFormat>SMB-{0000}</displayFormat>
        <label>SMS Batch Name</label>
        <trackHistory>false</trackHistory>
        <type>AutoNumber</type>
    </nameField>
    <pluralLabel>SMS Batch</pluralLabel>
    <searchLayouts/>
    <sharingModel>ControlledByParent</sharingModel>
    <validationRules>
        <fullName>Batch_Start_Time_no_earlier_than_Now</fullName>
        <active>true</active>
        <description>Batch Start Time should not be earlier than Now</description>
        <errorConditionFormula>OR(AND(ISNEW(), Batch_Start__c&lt; NOW() ),AND( ISCHANGED( Batch_Start__c ), Batch_Start__c &lt;NOW() ))</errorConditionFormula>
        <errorDisplayField>Batch_Start__c</errorDisplayField>
        <errorMessage>Sorry you can't set the batch start time be ealier than current time.</errorMessage>
    </validationRules>
    <webLinks>
        <fullName>Activate_All</fullName>
        <availability>online</availability>
        <displayType>massActionButton</displayType>
        <linkType>javascript</linkType>
        <masterLabel>Activate All</masterLabel>
        <openType>onClickJavaScript</openType>
        <protected>false</protected>
        <requireRowSelection>true</requireRowSelection>
        <url>{!REQUIRESCRIPT("/soap/ajax/14.0/connection.js")} 
{!REQUIRESCRIPT("/soap/ajax/14.0/apex.js")}
var r;
if ({!Campaign.SMS_Task_Verified__c}){
    r = true;
}else{
    r = confirm("The checkbox SMS/MMS Task Verified is unchecked, still create SMS/MMS?"); 
}
if (r == true) { 
    var id= "{!Campaign.Id}";
    var status = sforce.apex.execute( 
    "SMSBatchService", 
    "ActiveAll", 
    { 
    CampaignId: id
    }); 

    if (status == '') { 
        window.location.reload();
    } else { 
        alert(status); 
    }
}</url>
    </webLinks>
    <webLinks>
        <fullName>Suspend_All</fullName>
        <availability>online</availability>
        <displayType>massActionButton</displayType>
        <linkType>javascript</linkType>
        <masterLabel>Suspend All</masterLabel>
        <openType>onClickJavaScript</openType>
        <protected>false</protected>
        <requireRowSelection>true</requireRowSelection>
        <url>{!REQUIRESCRIPT("/soap/ajax/14.0/connection.js")} 
{!REQUIRESCRIPT("/soap/ajax/14.0/apex.js")} 
var id= "{!Campaign.Id}"; 
var status = sforce.apex.execute( 
"SMSBatchService", 
"SuspendAll", 
{ 
CampaignId: id
}); 

if (status == '') { 
window.location.reload();
} else { 
alert(status); 
}</url>
    </webLinks>
</CustomObject>
