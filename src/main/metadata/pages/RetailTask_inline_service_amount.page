                      <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Service Parts Amount"/>
                        <apex:outputField value="{!retailtask.Service_Parts_Amount__c}"/>  
                      </apex:pageBlockSectionItem>
                      <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Service Total Amount"/>
                        <apex:outputField value="{!retailtask.Service_Total_Amount__c}"/>  
                      </apex:pageBlockSectionItem>
                    </apex:pageBlockSection>
            </apex:pageBlock>         
        </apex:outputPanel>                   
    </apex:form>
