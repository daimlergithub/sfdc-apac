<apex:page standardController="Campaign" extensions="taskRecordViewOnCampaignController">
 <apex:pageBlock >
 <apex:pageMessages />
  <apex:pageBlockTable value="{!showTaskList}" var="tskLst">
   <apex:column headerValue="Subject" value="{!tskLst.Subject}"/>
   <apex:column headerValue="Campaign Name" value="{!tskLst.What.Name}"/>
   <apex:column headerValue="Customer Name">
   <apex:outputLink value="#" onclick="window.open('{!URLFOR($Site.prefix)}/{!tskLst.WhoId}')">{!tskLst.Who.Name}</apex:outputLink>
   </apex:column>
   <apex:column headerValue="Due Date" value="{!tskLst.ActivityDate}"/>
   <apex:column headerValue="Assigned To" value="{!tskLst.Owner.Name}"/>
   <apex:column headerValue="Task Status" value="{!tskLst.Status}"/>
  </apex:pageBlockTable>
 </apex:pageBlock>
</apex:page>