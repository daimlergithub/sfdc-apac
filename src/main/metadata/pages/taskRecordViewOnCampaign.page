<apex:page standardController="Campaign" extensions="taskRecordViewOnCampaignController">
 <apex:pageBlock >
 <apex:pageMessages />
  <apex:pageBlockTable value="{!showTaskList}" var="tskLst">
   <apex:column headerValue="{!$ObjectType.Task.fields.Subject.Label}" value="{!tskLst.Subject}"/>
   <apex:column headerValue="{!$ObjectType.Task.fields.Campaign_Name__c.Label}" value="{!tskLst.What.Name}"/>
   <apex:column headerValue="{!$ObjectType.Task.fields.CustomerName__c.Label}">
   <apex:outputLink value="#" onclick="window.open('{!URLFOR($Site.prefix)}/{!tskLst.WhoId}')">{!tskLst.Who.Name}</apex:outputLink>
   </apex:column>
   <apex:column headerValue="{!$Label.Due_Date}" value="{!tskLst.ActivityDate}"/>
   <apex:column headerValue="{!$Label.Assigned_To}" value="{!tskLst.Owner.Name}"/>
   <apex:column headerValue="{!$Label.Task_Status}" value="{!tskLst.Status}"/>
  </apex:pageBlockTable>
 </apex:pageBlock>
</apex:page>