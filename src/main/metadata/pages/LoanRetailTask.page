                        </apex:outputText>
                    </apex:column>
                    <apex:column headerValue="{!$ObjectType.Retail_Task__c.fields.Credit_Loan_Company_Name__c.Label}">
                        
                        <apex:outputText value="{!loan.Credit_Loan_Company_Name__c}" style="width:9%; white-space:nowrap;"> 
