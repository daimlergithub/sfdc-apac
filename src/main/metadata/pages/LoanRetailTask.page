                        </apex:outputText>
                    </apex:column>
                    
                   
                     <apex:column headerValue="{!$ObjectType.Retail_Task__c.fields.Actual_Maturity_Date__c.Label}">
                        <apex:outputText value="{!loan.Actual_Maturity_Date__c}" style="width:9%; white-space:nowrap;">
