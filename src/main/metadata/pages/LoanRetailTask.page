<apex:page standardController="Account"  extensions="LoanRetailTask" showHeader="false" sidebar="false">
    <apex:form >
        <apex:pageBlock id="LoanRetailTask" title="Related Dealer view for Loan">
           <apex:pageBlockTable id="lon" value="{!Loanlist}" var="loan">
                    
                    <apex:column headerValue="{!$ObjectType.Retail_Task__c.fields.Name.Label}">
                        <apex:outputlink style="width:9%; white-space:nowrap;" value="https://daimlerasia--asiadev23.cs5.my.salesforce.com/{!loan.id}">{!loan.Name} 
                        </apex:outputlink>
                    </apex:column>

           
                    <apex:column headerValue="{!$ObjectType.Retail_Task__c.fields.Bank_Account_Name__c.Label}">
