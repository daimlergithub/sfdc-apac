<apex:page standardController="Case" extensions="MBJ_FS_Case_Inquiry_Controller" >
    <apex:form >
        <apex:pageBlock id="pb1id" title="Case Edit" mode="edit">
        
            <apex:pageblockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
                <apex:commandButton action="{!cancel}" value="Cancel"/>
            </apex:pageblockButtons>
            
            <apex:pageblockSection id="section1" title="General Information">
                <apex:inputField value="{!Case.Subject}"/>
                <apex:inputField value="{!Case.Status}"/>
                <apex:inputField value="{!Case.Ownerid}"/>
                <apex:inputField value="{!Case.Accountid}"/>
                <apex:inputField value="{!Case.Retail_Task__c}">
                    <apex:actionSupport event="onchange" action="{!populateContractNumber}" reRender="contractNoId"/>
                </apex:inputField>
                <apex:outputField value="{!Case.RecordTypeid}"/>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Contract Number"/>
                    <apex:outputLink id="contractNoId" value="/{!Case.Retail_Task__c}" target="_blank">{!Case.Contract_Number__c}</apex:outputLink>
                </apex:pageBlockSectionItem>
                <apex:inputField value="{!Case.Case_Complainant__c}"/>
                <apex:inputField value="{!Case.ownerId}"/>
                <apex:inputField value="{!Case.Lead__c}"/>
                <apex:inputField value="{!Case.Case_Class__c}"/>
                <apex:inputField value="{!Case.Inquiry_Comments__c}" style="width:300px; height:100px"/>
                <apex:inputField value="{!Case.Case_Type__c}">
                    <apex:actionSupport event="onchange" action="{!nullifyCaseQuotationPageSection}" reRender="panelFirstid,panelSecondid,panelThirdid,panelFourthid,panelFifthid,WOCA1id,WOCA2id,docReqid,panelLastid"/>
                </apex:inputField>
                <apex:inputField value="{!Case.Internal_Comments__c}" style="width:300px; height:100px"/>
            </apex:pageblockSection>
            
            <apex:outputPanel id="panelFirstid">
                <apex:pageblockSection title="Early Termination" rendered="{!IF(Case.Case_Type__c == 'Early Termination',true,false)}"> 
                    <apex:inputField value="{!Case.Retail_Non_Retail_car__c}"/>
                    <apex:inputField value="{!Case.ET_Type_for_Close_Mileage__c}"/>
                    <apex:inputField value="{!Case.Voluntary_insurance_check__c}"/>
                    <apex:inputField value="{!Case.X3_months_usage__c}"/>
                    <apex:inputField value="{!Case.Area_manager_approval__c}"/>
                    <apex:inputField value="{!Case.Govt_Subsidy_reimburse__c}"/>
                    <apex:inputField value="{!Case.Final_monthly_payment_date1__c}"/>
                    <apex:inputField value="{!Case.Reduction_of_fee_for_date1__c}"/>
                    <apex:inputField value="{!Case.Final_monthly_payment_date2__c}"/>
                    <apex:inputField value="{!Case.Reduction_of_fee_for_date2__c}"/>             
                </apex:pageblockSection>
            </apex:outputPanel>
            
            <apex:outputPanel id="panelSecondid">
                <apex:pageblockSection title="Payout" rendered="{!IF(Case.Case_Type__c == 'Payout',true,false)}"> 
                    <apex:inputField value="{!Case.Buyer__c}"/>
                    <apex:inputField value="{!Case.Replacement__c}"/>
                </apex:pageblockSection>
            </apex:outputPanel>
            
            <apex:outputPanel id="panelThirdid">
                <apex:pageblockSection title="Re-Lease" rendered="{!IF(Case.Case_Type__c == 'Re-Lease',true,false)}"> 
                    <apex:inputField value="{!Case.Mileage__c}"/>
                    <apex:inputField value="{!Case.Accident_repair_history__c}"/>
                    <apex:inputField value="{!Case.Re_lease_voluntary_insurance_check__c}"/>
                    <apex:inputField value="{!Case.Re_lease_term__c}"/>
                    <apex:inputField value="{!Case.Regarding_Vehicle_transfer_doc__c}"/>                 
                </apex:pageblockSection>
            </apex:outputPanel>
            
            <apex:outputPanel id="panelFourthid">
                <apex:pageblockSection title="Re-loan" rendered="{!IF(Case.Case_Type__c == 'Re-loan',true,false)}"> 
                    <apex:inputField value="{!Case.Down_payment__c}"/>
                    <apex:inputField value="{!Case.Bonus_payment_amount__c}"/>
                    <apex:inputField value="{!Case.Bonus_payment_month_1_month_2__c}"/>
                    <apex:inputField value="{!Case.Payment_term__c}"/>
                    <apex:inputField value="{!Case.First_payment__c}"/>
                </apex:pageblockSection>
            </apex:outputPanel>
            
            <apex:outputPanel id="panelFifthid">
                <apex:pageblockSection title="Pre-Appraisal (Close End) or Pre-Appraisal (SWP)" rendered="{!IF(Case.Case_Type__c == 'Pre-Appraisal (Close End)' || Case.Case_Type__c == 'Pre-Appraisal (SWP)' ,true,false)}">
                    <apex:inputField value="{!Case.Pre_app_Location__c}"/>
                    <apex:inputField value="{!Case.Pre_app_requested_date_to_JAAI__c}"/>
                    <apex:inputField value="{!Case.Pre_app_result_shared__c}"/>
                    <apex:inputField value="{!Case.Pre_app_1st_requested_date__c }"/>
                    <apex:inputField value="{!Case.Pre_app_2nd_requested_date__c}"/>
                    <font color="red"><U>Note: </U>Saturday/Sunday and National Holiday is not accepted JAAI</font>
                </apex:pageblockSection>
            </apex:outputPanel>
            
            <apex:pageblockSection title="Authentification">
                <apex:inputField value="{!Case.Full_Name__c}"/>
                <apex:inputField value="{!Case.DOB__c}"/>
                <apex:inputField value="{!Case.Registered_Phone_no__c}"/>
                <apex:inputField value="{!Case.Authentification_Address__c}"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection id="sec2" title="Requestor">
                <apex:inputField id="reqId" value="{!Case.Requestor__c}">
                    <apex:actionSupport event="onchange" action="{!nullifyReqCompPersonPhone}" reRender="sec2,sec3,sec4,rss1id,refqId,reCppId,rcvInDlrId,rcvSprtDlrId,rss11id,refq1Id,reCpp1Id,pyrInDlrId,pyrSprtDlrId"/>
                </apex:inputField>
                <apex:outputText rendered="{!IF(Case.Requestor__c = '' || Case.Requestor__c = 'Contractor' || Case.Requestor__c = 'Guarantor',true,false)}"/>
                <apex:inputField id="reqqCppId" value="{!Case.Requestor_Company_Person_Phone__c}" rendered="{!IF(Case.Requestor__c = 'Others',true,false)}">
                    <apex:actionSupport event="onchange" action="{!CallReceiverAndPayer}" reRender="reCppId,reCpp1Id"/>
                </apex:inputField>
                <apex:inputField id="reqlookupId" value="{!Case.Requester_Initial_Dealer__c}" rendered="{!IF(Case.Requestor__c == 'Initial Dealer' || Case.Requestor__c == 'Other Dealer',true,false)}">
                    <apex:actionSupport event="onchange" action="{!CallReceiverAndPayer}" reRender="rcvInDlrId,pyrInDlrId"/>
                </apex:inputField>
                <apex:inputField id="reqSprtDlr" value="{!Case.Requestor_Supporting_Dealer__c}" rendered="{!IF(Case.Requestor__c == 'Supporting dealer',true,false)}">
                    <apex:actionSupport event="onchange" action="{!CallReceiverAndPayer}" reRender="rcvSprtDlrId,pyrSprtDlrId"/>
                </apex:inputField>
                <apex:inputField value="{!Case.Communicated_with_Previous_dealer__c}"/>
                <apex:inputField value="{!Case.Evidence_Check__c}"/>
                <apex:inputField value="{!Case.Request_date_time__c}"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection id="sec3" title="Receiver">
                <apex:inputcheckbox id="rss1id" value="{!Case.Receiver_Same_as_Requestor__c}" disabled="{!Case.Requestor__c == ''}">
                    <apex:actionSupport event="onchange" action="{!ReceiverSameAsRequestor}" rerender="sec3,refqId,rcvOutputText,reCppId,rcvInDlrId,rcvSprtDlrId"/>
                </apex:inputcheckbox>
                <apex:outputText ></apex:outputText>
                <apex:inputField id="refqId" value="{!Case.Receiver1_For_quotation__c}">
                    <apex:actionSupport event="onchange" reRender="sec3"/>
                </apex:inputField>
                <apex:outputText id="rcvOutputText" rendered="{!IF(Case.Receiver1_For_quotation__c == '' || Case.Receiver1_For_quotation__c == 'Contractor' || Case.Receiver1_For_quotation__c == 'Guarantor',true,false)}"/>
                <apex:inputField id="reCppId" value="{!Case.Receiver_Company_Person_Phone__c}" rendered="{!IF(Case.Receiver1_For_quotation__c == 'Others',true,false)}"/>
                <apex:inputField id="rcvInDlrId" value="{!Case.Receiver_Initial_Dealer__c}" rendered="{!IF(Case.Receiver1_For_quotation__c == 'Initial Dealer' || Case.Receiver1_For_quotation__c == 'Other Dealer',true,false)}"/>
                <apex:inputField id="rcvSprtDlrId" value="{!Case.Receiver_Supporting_Dealer__c}" rendered="{!IF(Case.Receiver1_For_quotation__c == 'Supporting dealer',true,false)}"/>
                <apex:inputField value="{!Case.Receiver_Preferred_comm_Channel__c}"/>
                <apex:inputField value="{!Case.Receiver_address_type__c}"/>
                <apex:inputField value="{!Case.Receiver_address__c}" style="width:300px; height:100px"/>
                <apex:inputField value="{!Case.Receiver_Fax_Email_address__c}"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection id="sec4" title="Payer">
                <apex:inputcheckbox id="rss11id" value="{!Case.Payer_Same_as_Requestor__c}" disabled="{!Case.Requestor__c == ''}">
                    <apex:actionSupport event="onchange" action="{!PayerSameAsRequestor}" rerender="sec4,refq1Id,pyrOutputText,reCpp1Id,pyrInDlrId,pyrSprtDlrId"/>
                </apex:inputcheckbox>
                <apex:outputText ></apex:outputText>
                <apex:inputField id="refq1Id" value="{!Case.Payer__c}">
                    <apex:actionSupport event="onchange" reRender="sec4"/>
                </apex:inputField>
                <apex:outputText id="pyrOutputText" rendered="{!IF(Case.Payer__c == '' || Case.Payer__c == 'Contractor' || Case.Payer__c == 'Guarantor',true,false)}"/>
                <apex:inputField id="reCpp1Id" value="{!Case.Payer_Company_Person_Phone__c}" rendered="{!IF(Case.Payer__c == 'Others',true,false)}"/>
                <apex:inputField id="pyrInDlrId" value="{!Case.Payer_Initial_Dealer__c}" rendered="{!IF(Case.Payer__c == 'Initial Dealer' || Case.Payer__c == 'Other Dealer',true,false)}"/>
                <apex:inputField id="pyrSprtDlrId" value="{!Case.Payer_Supporting_Dealer__c}" rendered="{!IF(Case.Payer__c == 'Supporting dealer',true,false)}"/>
                <apex:inputField value="{!Case.Payer_Preferred_comm_Channel__c}"/>
                <apex:inputField value="{!Case.Payer_address_type__c}"/>
                <apex:inputField value="{!Case.Payer_address__c}" style="width:300px; height:100px"/>
                <apex:inputField value="{!Case.Payer_Fax_Email_address__c}"/>
            </apex:pageblockSection>
          
            <apex:pageBlockSection >
                <apex:inputField value="{!Case.TL_Reviewed__c}"/>
                <apex:inputField value="{!Case.Document_sending_date__c}"/>
            </apex:pageBlockSection>
            
            /*Added for Escalate to MBF and Escalate to Dealer functionality on 14June2017 */
            <apex:pageblockSection title="Dealer Suggestion">
                <apex:inputField value="{!Case.Already_Contacted_Dealer__c}"/>
                <apex:inputField value="{!Case.Requires_Dealer_Contact__c}"/>
                <apex:inputField value="{!Case.Case_Dealer__c}"/>
                <apex:inputField value="{!Case.Case_Dealer_User__c}"/>
                <apex:inputField value="{!Case.Share_to_Regional_Office__c}"/>
                <apex:inputField value="{!Case.Retail_Case_Notice_Dealer_Flag__c}"/>
            </apex:pageblockSection>
                        
        </apex:pageBlock>
    </apex:form>
</apex:page>