<apex:page standardController="Case" showHeader="false" sidebar="false">
    <apex:form >
        <apex:pageBlock mode="maindetail">
        
        <apex:pageblockSection >
                <apex:outputField value="{!Case.Case_Complainant__c}"/>
                <apex:outputField value="{!Case.RecordTypeid}"/>
                <apex:outputField value="{!Case.Case_Class__c}"/>
                <apex:outputField value="{!Case.ownerId}"/>
                <apex:outputField value="{!Case.Case_Type__c}"/>
                <apex:outputField value="{!Case.Case_SubSubType__c}"/>
                <apex:outputField value="{!Case.Case_Situation__c}"/>
                <apex:outputField value="{!Case.Case_Department__c}"/>
                <apex:outputField value="{!Case.Cause__c}"/>
                <apex:outputField value="{!Case.Result__c}"/>
                <apex:outputField value="{!Case.Internal_Comments__c}"/>
                <apex:outputField value="{!Case.Customer_Satisfaction__c}"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection title="Query Information">
                <apex:outputField value="{!Case.Customer_Type__c}"/>
                <apex:outputField value="{!Case.Retail_Task__c}"/>
                <apex:outputField value="{!Case.Related_Department__c}"/>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Contract Number"/>
                    <apex:outputLink value="/{!Case.Retail_Task__c}" target="_blank">{!Case.Contract_Number__c}</apex:outputLink>
                </apex:pageBlockSectionItem>
            </apex:pageblockSection>
            
            <apex:pageblockSection title="Dealer Information">
                <apex:outputField value="{!Case.Case_Dealer__c}"/>
                <apex:outputField value="{!Case.Case_Dealer_User__c}"/>
            </apex:pageblockSection>
            
            <apex:pageblockSection title="Description information" columns="1">
                <apex:outputField value="{!Case.Customer_Statement__c}"/>
                <apex:outputField value="{!Case.MPC_Internal_Notes__c}"/>
                <apex:outputField value="{!Case.PR_Comment_for_Dealer__c}"/>
            </apex:pageblockSection>
        
        </apex:pageBlock>
    </apex:form>
</apex:page>