<apex:page controller="ConvertToTask1Controller" sidebar="false">
    <script language="javascript">
        function converttoleadfin() {
            alert("Convert to Lead successfully.");
        }
        function RelodeParent(){
          
          window.opener.location.href="{!URLFOR($Site.Prefix)}/{!$CurrentPage.parameters.CampaignId}";          
          window.top.close();
  
       }
        function checkAll(cb){
            var inputElem = document.getElementsByTagName("input");
            for (var i = 0; i < inputElem.length; i++) {
                if (inputElem[i].id.indexOf("checkedone") != -1) {
                    inputElem[i].checked = cb.checked;
                }
            };
        }
    </script>
    <apex:form id="frm">
        <apex:pageBlock title="{!$Label.Convert_To_Task}" id="block">
            <!--  <apex:outputText value="{!leadRT}">{!$Label.CL_Lead_Record_Type}</apex:outputText> -->
            <apex:pageBlockTable value="{!campaignMembers}" var="cMember">
                <apex:column >
                    <apex:facet name="header"> 
                        <apex:inputCheckbox onclick="checkAll(this)" />
                    </apex:facet>
                    
                </apex:column>
                <apex:column value="{!cMember.Name}" headerValue="{!$Label.CL_Member_Name}"/>
            </apex:pageBlockTable>
            <apex:pageBlockButtons location="bottom"> 
            <apex:commandButton oncomplete="RelodeParent()" action="{!convertToTask}" value="{!$Label.Convert_To_Task}"/>
                <apex:commandButton oncomplete="RelodeParent()" action="{!cancel}" value="{!$Label.CL_Cancel}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>