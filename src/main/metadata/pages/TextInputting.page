<apex:page controller="TextInputtingControlelr">
    <apex:form >
        <apex:pageBlock rendered="{!isUpdateable}">
            <div style="margin:20px;">
                <apex:pageMessages ></apex:pageMessages>
                <div style="font-size:14px; font-weight:bold; margin-bottom:10px;">Please input your notes:</div>
                <div>
                    <apex:inputTextarea value="{!textValue}" rows="20" style="width:50%;"/>
                </div>
                <div style="margin-top:10px; margin-left:15%;">
                    <apex:commandButton action="{!save}" value="Save" style="width:80px; height:32px;"/>
                    <apex:commandButton action="{!goBack}" value="Cancel" style="width:80px; height:32px; margin-left:30px;"/>
                </div>
            </div>
        </apex:pageBlock>
        <apex:pageBlock rendered="{!NOT(isUpdateable)}">
            <div style="margin:20px; font-size:14px; font-weight:bold;">No permission!</div>
        </apex:pageBlock>
    </apex:form>
</apex:page>