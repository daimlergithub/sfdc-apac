<apex:page controller="TerminateVehicleRelationshipExtension" tabStyle="Vehicle__c" docType="html-5.0">

 <apex:form id="Myform">
  <apex:pageBlock >
      <apex:pageBlockSection title="{!$Label.Vehicle_Information}" collapsible="false">
               <apex:outputField value="{!vehiclerec.Name}"/>
               <apex:outputField value="{!vehiclerec.UsVIN__c}"/>
               <apex:outputField value="{!vehiclerec.Brand__c}"/>
               <apex:outputField value="{!vehiclerec.Class__c}"/>
               <apex:outputField value="{!vehiclerec.Model__c}"/>              
      </apex:pageBlockSection>
      <apex:pageBlockSection title="{!$Label.VehicleRelationshipInformation}" collapsible="false">
             <apex:pageBlockTable value="{!lstVehicleRelation}" var="Ve_Rel" rendered="{!lstVehicleRelation.size!=0}">
                     <apex:column value="{!Ve_Rel.Contact__c}"/>
                     <apex:column value="{!Ve_Rel.Start_Date__c}"/>
                     <apex:column value="{!Ve_Rel.Car_Relation__c}"/>
                     <apex:column value="{!Ve_Rel.Owner_Relation__c}"/> 
              </apex:pageBlockTable>             
              <apex:pageMessage summary="{!$Label.Terminate_Vehicle_Relationship}" severity="info" strength="3" rendered="{!lstVehicleRelation.size==0}"/>
              <apex:pageMessages />               
        </apex:pageBlockSection>
        <apex:pageBlockSection title="{!$Label.TerminateVehicleRelationship}" collapsible="false" rendered="{!lstVehicleRelation.size!=0}" columns="2">
             
               
             <apex:outputLabel value="{!$ObjectType.Vehicle_Relationship__c.fields.End_Date__c.Label} (mm/dd/yyyy)">  

             <apex:input type="date"  value="{!End_Date}"  required="true" title="Date Format MM/DD/YYYY"/> 
             </apex:outputLabel>
             <apex:outputLabel value="{!$ObjectType.Vehicle_Relationship__c.fields.End_Reason__c.Label}">
            
              <apex:selectList value="{!selectedEndReason}" multiselect="false" size="1" label="Please enter End Reason" required="true" >
                <apex:selectOptions value="{!EndReason}"/>
            </apex:selectList>
            </apex:outputLabel>
            <apex:outputLabel value="{!$ObjectType.Vehicle_Relationship__c.fields.Comments__c.Label}">
             <apex:inputTextarea value="{!End_ReasonText}" /> 
             </apex:outputLabel>  
                           
       </apex:pageBlockSection>
       <apex:pageBlockButtons >
          <apex:commandButton value="{!$Label.Save_Button}" action="{!SaveRecords}" rendered="{!lstVehicleRelation.size!=0}"/>
            <apex:commandButton value="{!$Label.Cancel_Button}" action="{!cancelpage}" immediate="true"   html-formnovalidate="formnovalidate"/>  
        </apex:pageBlockButtons>           
  </apex:pageBlock>
 </apex:form>  
</apex:page>