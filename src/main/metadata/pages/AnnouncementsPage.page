<apex:page Controller="AnnouncementController" showHeader="false" sidebar="false" >
  <apex:form >
      <apex:pageBlock rendered="{!isVisibleforDealers}" title="{!$Label.Announcements}">
          <apex:pageBlockTable value="{!dealerchatterfeed}" var="chfeed" >
                  <!--<apex:column value="{!chfeed.parent.Name}"/> 
                 <apex:column value="{!chfeed.InsertedBy.Name}"/><br/>-->
                  <apex:column >
                    <apex:outputText value="{!chfeed.Body}" escape="false"/>
                  </apex:column>
          </apex:pageBlockTable>
      </apex:pageBlock>
    <apex:pageBlock rendered="{!isVisible}">
      <apex:pageBlockButtons >
        <apex:commandButton value="Post" action="{!doPost}" oncomplete="window.top.location='/home/home.jsp'" />
      </apex:pageBlockButtons>
      <apex:pageBlockSection columns="1">
         <apex:outputLabel value="Announcement"/>
         <apex:inputTextarea value="{!detail}" style="width: 400px;height: 100px" />
      </apex:pageBlockSection>
   </apex:pageBlock>
 </apex:form>
</apex:page>