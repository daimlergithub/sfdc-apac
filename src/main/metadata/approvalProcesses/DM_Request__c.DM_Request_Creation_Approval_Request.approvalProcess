                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>It will go for Approval to the manager of record creator.</description>
        <label>Step1-Manager Approval</label>
        <name>Step1_Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>Change_Status_To_Open</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
