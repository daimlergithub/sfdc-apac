            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Manager will pick up the record and forward it for approval based on the department.</description>
        <entryCriteria>
            <criteriaItems>
                <field>DM_Request__c.Sales_Department__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <criteriaItems>
                <field>DM_Request__c.Status__c</field>
                <operation>equals</operation>
                <value>Approving</value>
            </criteriaItems>
            <criteriaItems>
                <field>DM_Request__c.MD__c</field>
                <operation>equals</operation>
                <value>KR</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Step2-Assign to Sales Queue</label>
        <name>Step2_Assign_to_Sales_Queue</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Change_Status_To_Open</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
