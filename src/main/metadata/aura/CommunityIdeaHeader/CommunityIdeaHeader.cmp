<aura:component description="header" implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="content1" type="String" default="A portal for regional users of Mercedes Benz to collaborate and exchange ideas." access="global"/>
   <lightning:card iconName="custom:custom103" title="Welcome to RUG Collaboration Community" class="card">     
    
    <lightning:layout horizontalAlign="space" class="card">
            <lightning:layoutItem flexibility="auto" padding="around-small" size="12">
                <div class="slds-text-heading_small slds-float_left"> 
                    &nbsp;&nbsp;&nbsp;&nbsp;{!v.content1} 
                </div>                
            </lightning:layoutItem>            
   </lightning:layout>    
        <lightning:layout horizontalAlign="space" class="card">
            <lightning:layoutItem flexibility="auto" padding="around-small" size="12">                    
                <div class="slds-p-left--medium slds-p-right--medium">
                    <div class="slds-text-heading_small">Rules</div>
                    <div class="slds-box">
                        <ul class="slds-list--vertical slds-has-dividers--top-space">
                            <li>1. Honorary members can view and create ideas, collaborate with other members.</li>
                            <li>2. RUG members can view, create, and vote on ideas, collaborate with other members.</li>
                            <li>3. Best ideas are taken in product roadmap on a quarterly basis.</li>
                        </ul>   
                    </div> </div>
            </lightning:layoutItem>
        </lightning:layout>    
        <lightning:layout horizontalAlign="space" class="card">
            <lightning:layoutItem flexibility="auto" padding="around-small" size="12">
                <div class="slds-p-left--medium slds-p-right--medium">
                    <div class="slds-text-heading_small"> Here's how it works</div>
                    <div class="slds-box">
                        <ul class="slds-list--vertical slds-has-dividers--top-space">                     
                            <a href="{!$Label.c.IdeaId}" target="_blank" id="Test1" >Anybody can create Idea</a><br/>
                            <a href="{!$Label.c.IdeaId}" target="_blank" id="Test2" >Anybody can comment on Idea</a>
                        </ul>
                    </div></div>
            </lightning:layoutItem>            
        </lightning:layout>
   </lightning:card>
</aura:component>