<apex:page Controller="ComplaintDescriptionController" >
    <apex:sectionHeader title="View Complaint Descriptions/Resolutions" />
    <apex:form >
    <apex:pageBlock mode="maindetail"> 
    <apex:pageBlockButtons >
    <apex:commandButton value="{!$Label.Campaign_Planning_Page_Cancel_Button}" action="{!cancel}" />
    </apex:pageBlockButtons> 
            <apex:repeat value="{!theResults}" var="theResult">
            <apex:pageBlock >
            <apex:pageblockSection columns="1">
                <apex:pageblockSectionItem >
                    <apex:outputLabel value="Description" />
                    <apex:outputText value="{!theResult.Description__c}"/>
                </apex:pageblockSectionItem>
                <apex:pageblockSectionItem >
                    <apex:outputLabel value="Created By" />
                    <apex:outputText value="{!theResult.Created_By__r.name} {!theResult.CreatedDate}"/>
                </apex:pageblockSectionItem>
                <apex:pageblockSectionItem >
                    <apex:outputLabel value="Date/Time" />
                    <apex:outputText value="{!theResult.Date_Time__c} ">
                    </apex:outputText>
                </apex:pageblockSectionItem>
                <apex:pageblockSectionItem >
                    <apex:outputLabel value="Complaint Description / Resolution" />
                    <apex:outputText value="{!theResult.Name}"/>
                </apex:pageblockSectionItem>
                </apex:pageblockSection>
                </apex:pageBlock>
            </apex:repeat>
    </apex:pageBlock>
    </apex:form>
</apex:page>