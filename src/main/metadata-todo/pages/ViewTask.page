<apex:page standardController="Account" extensions="ViewTaskController"> 

    <apex:form > 
        <apex:pageMessages />
        <apex:pageBlock >
        <apex:pageBlockTable value="{!wraps}" var="wrap">
            <apex:column headerValue="Activity Subject">
                <apex:outputText value="{!wrap.tk.Subject}"/>
            </apex:column>
            <apex:column headerValue="Activity Status">
                <apex:outputText value="{!wrap.tk.Status}"/>
            </apex:column>
            <apex:column headerValue="Record Type">
                <apex:outputText value="{!wrap.tk.RecordType.Name}"/>
            </apex:column>
            <apex:column headerValue="Related to">
                <apex:outputText value="{!wrap.RelatedTo}"/>
            </apex:column>
            <apex:column headerValue="Create Date">
                <apex:outputText value="{!wrap.tk.CreatedDate}"/>
            </apex:column>
        </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>