<apex:page standardController="Lead__c" extensions="Lead_AddmultiBrandController" showHeader="false" sidebar="false">
    <apex:pageMessages id="pgmasg"></apex:pageMessages>
    <script>
        function refreshpage()
        {
            window.top.location='/{!Lead__c.id}';
        }
    </script>
    <apex:form >
        <apex:pageBlock id="pb">
            <apex:pageBlockSection id="refreshdata" columns="4" showHeader="false">
                <apex:repeat value="{!wrappermultibrand}" var="wrap" id="wrapmulbrand">
                    <apex:outputLabel value="Brand" style="font-weight:bold">
                        <apex:selectList value="{!wrap.vehiclebrand}" size="1" style="width:80px">                           
                            <apex:selectOptions value="{!brands[0]}" rendered="{!if(brands.size>0,true,false)}"/>
                            <apex:selectOptions value="{!brands[1]}" rendered="{!if(brands.size>1,true,false)}"/>
                            <apex:selectOptions value="{!brands[2]}" rendered="{!if(brands.size>2,true,false)}"/>
                            <apex:selectOptions value="{!brands[3]}" rendered="{!if(brands.size>3,true,false)}"/>
                            <apex:selectOptions value="{!brands[4]}" rendered="{!if(brands.size>4,true,false)}"/>                                                       
                        </apex:selectList> 
                    </apex:outputLabel>
                    <apex:outputLabel value="Vehicle Model Details" style="font-weight:bold">
                        <apex:inputText value="{!wrap.vechmodel}"/>
                    </apex:outputLabel>
                    <apex:outputLabel value="Quantity" style="font-weight:bold">
                        <apex:inputText value="{!wrap.vechquanty}" style="width:60px;font-weight:bold"/>
                    </apex:outputLabel>
                    <apex:commandButton action="{!addrow}" value="+" reRender="refreshdata,pgmasg" id="thebutton"/>
                </apex:repeat>
                <apex:commandButton action="{!save}" value="Save" oncomplete="refreshpage()"/>                
            </apex:pageBlockSection>         
        </apex:pageBlock>
    </apex:form>
</apex:page>