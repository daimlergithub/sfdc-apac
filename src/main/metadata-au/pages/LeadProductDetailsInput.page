<apex:page standardController="Lead_Product__c" extensions="LeadProductDetailsInputController">
    <apex:pageMessages id="pgmasg"></apex:pageMessages>
    <script>
        function refreshpage()
        {
            window.top.location='/{!Lead_Product__c.id}';
        }
        
    </script>
    <apex:form >
    <!-- This is the change-->
        <apex:pageBlock id="pb">
            <apex:pageBlockSection id="refreshdata" columns="5">
                <apex:repeat value="{!wrappermultibrand}" var="wrap" id="wrapmulbrand">
                    
                    <apex:inputText value="{!wrap.vechquanty}" label="Brand"/>
                                       
                    
                        
                        <apex:selectList value="{!wrap.vehiclebrand}" size="1" label="Vehicle Model" style="font-weight:bold">                           
                            <apex:selectOptions value="{!brands[0]}" rendered="{!if(brands.size>0,true,false)}"/>
                            <apex:selectOptions value="{!brands[1]}" rendered="{!if(brands.size>1,true,false)}"/>
                            <apex:selectOptions value="{!brands[2]}" rendered="{!if(brands.size>2,true,false)}"/>
                            <apex:selectOptions value="{!brands[3]}" rendered="{!if(brands.size>3,true,false)}"/>
                            <apex:selectOptions value="{!brands[4]}" rendered="{!if(brands.size>4,true,false)}"/>                                                       
                        </apex:selectList> 
                                      
                    <apex:inputText value="{!wrap.vechmodeldetails}" label="Vehicle Model Details"/>
                    <apex:inputText value="{!wrap.vechmodel}" label="No. of Vehicles" /> 
                    <apex:commandButton action="{!addrow}" value="+" reRender="refreshdata,pgmasg" id="thebutton"/>
                </apex:repeat>           
            </apex:pageBlockSection> 
            <br/> 
            <center>
            <apex:commandButton action="{!save}" value="Insert Vehicle" oncomplete="refreshpage()" style="align:centre"/> 
            </center>        
        </apex:pageBlock>
    </apex:form>
</apex:page>