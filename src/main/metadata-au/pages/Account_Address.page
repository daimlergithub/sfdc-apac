<apex:page standardController="Account" extensions="Addresscontroller">
<apex:form >  
    <apex:pageBlock >  
        <apex:pageBlockSection columns="2" rendered="{!!Preferred}"> 
             <apex:outputField value="{!addressList_details.Address_Type__c}"/>
             <apex:outputField value="{!addressList_details.Address_Line_1__c}"/>
             <apex:outputField value="{!addressList_details.Address_Line_2__c}"/>
             <apex:outputField value="{!addressList_details.Suburb__c}"/>
             <apex:outputField value="{!addressList_details.State__c}"/>
             <apex:outputField value="{!addressList_details.Country__c}"/>
             <apex:outputField value="{!addressList_details.Post_Code__c}"/>
             <apex:outputField value="{!addressList_details.Status__c}"/>   
        </apex:pageBlockSection>    
         <apex:pageBlockSection columns="2" rendered="{!Preferred}"> 
             <apex:outputText label="Address Type"/>
             <apex:outputText label="Address Line 1"/>
             <apex:outputText label="Address Line 2"/>
             <apex:outputText label="Suburb"/>
             <apex:outputText label="State"/>
             <apex:outputText label="Country"/>
             <apex:outputText label="Post Code"/>
             <apex:outputText label="Status"/> 
        </apex:pageBlockSection>   
      <apex:pageMessage strength="3" summary="No Preferred Address Found" severity="warning" rendered="{!Preferred}"/>      
   </apex:pageBlock>
 </apex:form>
 <style>
        .bPageBlock.brandSecondaryBrd.apexDefaultPageBlock.secondaryPalette
        {
            background-color: white;
        }
        accountTab .secondaryPalette, .individualPalette .accountBlock .secondaryPalette {
          background-color: white;
          border-color: White;
          }
  </style> 
</apex:page>